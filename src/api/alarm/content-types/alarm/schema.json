{
  "kind": "collectionType",
  "collectionName": "alarms",
  "info": {
    "singularName": "alarm",
    "pluralName": "alarms",
    "displayName": "Alarm",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "startTime": {
      "type": "time"
    },
    "startTimeDelay": {
      "type": "integer"
    },
    "startAlarmDisabled": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    },
    "endTime": {
      "type": "time"
    },
    "endTimeDelay": {
      "type": "integer"
    },
    "endAlarmDisabled": {
      "type": "boolean"
    },
    "account": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::account.account"
    },
    "property": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::property.property"
    },
    "service_type": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::service-type.service-type"
    },
    "notified": {
      "type": "datetime"
    },
    "daysOfWeek": {
      "type": "json"
    },
    "customer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::customer.customer"
    },
    "timezone": {
      "type": "string",
      "default": "UTC",
      "required": true
    },
    "createdByRole": {
      "type": "string",
      "required": false,
      "description": "The role of the user who created this alarm (e.g., Admin, Customer)"
    },
    "logs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::alarm-log.alarm-log",
      "mappedBy": "alarm"
    },
    "expected_service_person": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "required": false,
      "description": "Optional: If set, alarm will only trigger if service record's service person does not match this user"
    }
  }
}
